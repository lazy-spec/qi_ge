<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.person.qi_boot.dao.UserDao">


    <insert id="saveUser" keyProperty="id" useGeneratedKeys="true">
        insert into `user`(username, password, status, created_time)
        values (${username}, #{password}, #{status}, now())
    </insert>
    <update id="updateUserById">
        update `user`
        <set>
            <if test="username!=null">
                username = #{username},
            </if>
            <if test="password!=null">
                password = #{password},
            </if>
            <if test="status!=null">
                status = #{status},
            </if>
        </set>
        where id = #{id}
    </update>
</mapper>